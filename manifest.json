{
    "manifest_version": 3,
    "name": "Email Code Grabber",
    "version": "1.0",
    "description": "Automatically copies one-time codes from emails.",
    "permissions": [
        "clipboardWrite",
        "clipboardRead",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
      "<all_urls>",
      "file://*/*",
      "https://*/*",
      "http://*/*"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "image.png"
    }
  }
  